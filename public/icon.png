<svg xmlns="http://www.w3.org/2000/svg" width="512" height="512" viewBox="0 0 512 512">
  <g transform="translate(256, 256)">
    <!-- Asteroid -->
    <path fill="#666" d="M-100,-50 C-50,-100 50,-100 100,-50 100,50 50,100 -50,100 -100,50 -100,-50 Z" rx="20" transform="scale(0.8)"/>
    <!-- Crystal shards -->
    <g fill="#66CCFF" opacity="0.8">
      <path d="M-60,20 L-40,40 0,0 Z" transform="rotate(30) scale(0.8)"/>
      <path d="M-40,-20 L-20,0 0,0 Z" transform="rotate(-30) scale(0.8)"/>
      <path d="M20,-40 L40,-20 0,0 Z" transform="rotate(60) scale(0.8)"/>
      <path d="M40,20 L20,40 0,0 Z" transform="rotate(-60) scale(0.8)"/>
    </g>
    <!-- Rocket-drill spaceship -->
    <g fill="url(#grad1)">
      <path d="M0,-120 L20,-100 20,40 10,60 -10,60 -20,40 -20,-100 Z" rx="10"/>
      <path d="M-10,60 L-20,80 20,80 10,60 Z" rx="5"/>
    </g>
    <!-- Drill tip glow -->
    <circle cx="0" cy="80" r="20" fill="#CC66FF" opacity="0.6"/>
    <!-- Neon glow -->
    <g opacity="0.4">
      <path d="M0,-120 L20,-100 20,40 10,60 -10,60 -20,40 -20,-100 Z" stroke="#66CCFF" stroke-width="4" fill="none"/>
    </g>
  </g>
  <defs>
    <linearGradient id="grad1" x1="0" y1="-120" x2="0" y2="80" gradientUnits="userSpaceOnUse">
      <stop offset="0" stop-color="#66CCFF"/>
      <stop offset="1" stop-color="#CC66FF"/>
    </linearGradient>
  </defs>
</svg>